<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:background="#ff000000" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	<RelativeLayout 
		android:gravity="center" 
		android:background="#ff293763" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_margin="5.0dip">
		<ImageView 
			android:id="@+id/listitemimage" 
			android:layout_width="50.0dip" 
			android:layout_height="75.0dip" 
			android:layout_margin="5.0dip" 
			android:layout_alignParentRight="true" />
		<LinearLayout 
			android:gravity="center" 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="75.0dip" 
			android:layout_toLeftOf="@+id/listitemimage">
			<TextView 
				android:textSize="16.0sp" 
				android:textColor="#ffe6f4fa" 
				android:gravity="center" 
				android:id="@+id/listitemtitle" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="ပ႒ာန္းေဒသနာေတာ္ (၁)" />
			<TextView 
				android:textColor="#fff4e90c" 
				android:gravity="center" 
				android:id="@+id/listitemtype" 
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="ေဒါက္တာ နႏၵမာလာ" android:layout_below="@id/listitemtitle" />
			<ProgressBar 
				android:id="@+id/listprogress" 
				android:visibility="gone" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				style="?android:attr/progressBarStyleHorizontal" />
		</LinearLayout>
		<ImageView 
			android:id="@+id/listdelete" 
			android:visibility="gone" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_margin="5.0dip" 
			android:src="@android:drawable/ic_menu_delete" />
		<ImageView 
			android:id="@+id/listdownload" 
			android:visibility="gone" 
			android:layout_width="32.0dip" 
			android:layout_height="32.0dip" 
			android:layout_margin="10.0dip" 
			android:src="@android:drawable/stat_sys_download" 
			android:layout_alignParentBottom="false" 
			android:layout_centerVertical="true" />
		<ImageView 
			android:id="@+id/listplay" 
			android:visibility="gone" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_margin="10.0dip" 
			android:src="@android:drawable/ic_media_play" 
			android:layout_alignParentBottom="true" />
	</RelativeLayout>
</RelativeLayout>

