<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:gravity="center" 
	android:orientation="vertical" 
	android:background="#ffa30d03" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<TextView 
		android:textSize="23.0sp" 
		android:textColor="#ffffffff" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="Admin Panel Demo" />
	<EditText 
		android:id="@+id/title" 
		android:background="#ffffffff" 
		android:padding="10.0dip" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_margin="10.0dip" android:hint="Title" android:ems="10" android:singleLine="true" />
	<EditText 
		android:id="@+id/type" 
		android:background="#fffdfdfd" 
		android:padding="10.0dip" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:hint="Type  [ Action/Drama/Funny ]" 
		android:ems="10" />
	<EditText 
		android:id="@+id/video" 
		android:background="#ffffffff" 
		android:padding="10.0dip" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_margin="10.0dip" 
		android:hint="Video link" 
		android:ems="10" 
		android:singleLine="true" />
	<EditText 
		android:id="@+id/image" 
		android:background="#fffdfdfd" 
		android:padding="10.0dip" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:hint="Image link" 
		android:ems="10" 
		android:singleLine="true" />
	<Button 
		android:textColor="#ffffffff" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_margin="10.0dip" 
		android:text="Add Video" 
		android:onClick="add" />
	<Button 
		android:textColor="#ffffffff" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="Videos Gallery" 
		android:onClick="goToGallery" />
</LinearLayout>

